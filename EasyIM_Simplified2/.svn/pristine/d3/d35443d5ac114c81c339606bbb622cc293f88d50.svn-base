#import <UIKit/UIKit.h>

//
//核心基类：主要功能
//1.默认背景色RGBCOLOR(245, 245, 245)。
//2.控制导航栏隐藏显示。
//3.控制状态栏显示颜色。//需要在Info.plist配置文件中，增加键：View controller-based status bar appearance，并设置为NO；
//4.设置返回标题。
//5.页面跳转拦截。
//

#import <UIKit/UIKit.h>

NS_ASSUME_NONNULL_BEGIN

@interface MMCoreBaseViewController : UIViewController

/**
 获取是否需要隐藏导航栏
 
 @return 是否需要隐藏导航栏
 */
- (BOOL)getNeedHiddenNavigationBar;

/**
 获取状态栏是否为黑色
 
 @return 状态栏是否为黑色
 */
- (BOOL)getBlackStatusBar;

/**
 获取返回标题
 
 @return 返回标题
 */
- (NSString *)getBackTitle;

/**
 设置返回标题并跳转至下一界面
 
 @param viewController 下一界面
 @param animated 是否动画
 */
- (void)coreBaseVCPushViewController:(MMCoreBaseViewController *)viewController animated:(BOOL)animated;

/**
 设置返回标题并跳转至下一界面
 
 @param viewController 下一界面
 @param animated 是否动画
 @param moreConditions 更多判断条件
 */
- (void)coreBaseVCPushViewController:(MMCoreBaseViewController *)viewController animated:(BOOL)animated moreConditions:(void(^)(void))moreConditions;

@end

NS_ASSUME_NONNULL_END
